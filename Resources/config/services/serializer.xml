<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
		<parameter key="rezzza.ruler.serializer.php.class">Rezzza\RulerBundle\Ruler\Serializer\PHPSerializer</parameter>
		<parameter key="rezzza.ruler.serializer.grammar.class">Rezzza\RulerBundle\Ruler\Serializer\GrammarSerializer</parameter>
    </parameters>

    <services>
        <service id="rezzza.ruler.serializer.php" class="%rezzza.ruler.serializer.php.class%">
            <argument type="service" id="rezzza.ruler.asserter_container" />
        </service>

        <service id="rezzza.ruler.serializer.grammar" class="%rezzza.ruler.serializer.grammar.class%">
            <argument type="service" id="rezzza.ruler.asserter_container" />
        </service>
    </services>
</container>
